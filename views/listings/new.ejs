<% layout("../layouts/boilerplate") %>

<div class="form-container">
  <h1>Create New Listing</h1>

  <form class="form needs-validation" method="post" action="/listings" novalidate>
    <div class="form-group mb-3">
      <label for="title" class="form-label">Title</label>
      <input id="title" class="form-control" placeholder="Enter listing title" name="listing[title]" type="text" required>
      <div class="invalid-feedback">Please provide a title.</div>
    </div>

    <div class="form-group mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea id="description" class="form-control" name="listing[description]" placeholder="Enter description" required></textarea>
      <div class="invalid-feedback">Please add a description.</div>
    </div>

    <div class="form-group mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input id="image" class="form-control" placeholder="https://example.com/image.jpg" name="listing[image]" type="text">
      <div class="invalid-feedback">Please provide an image URL.</div>
    </div>

    <div class="form-group mb-3">
      <label for="price" class="form-label">Price ($)</label>
      <input id="price" class="form-control" placeholder="Enter price" name="listing[price]" min="0" step="0.01" type="number" required>
      <div class="invalid-feedback">Please enter a valid price.</div>
    </div>

    <div class="form-group mb-3">
      <label for="location" class="form-label">Location</label>
      <input id="location" class="form-control" placeholder="Enter location" name="listing[location]" type="text" required>
      <div class="invalid-feedback">Please enter the location.</div>
    </div>

    <div class="form-group mb-3">
      <label for="country" class="form-label">Country</label>
      <input id="country" class="form-control" placeholder="Enter country" name="listing[country]" type="text" required>
      <div class="invalid-feedback">Please enter the country.</div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Create Listing</button>
      <a href="/listings" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>
