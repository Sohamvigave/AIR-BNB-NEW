<% layout("../layouts/boilerplate") %>
<body>
    <h1>Create new listing</h1>
    <form method="post" action="/listings">
        <label for="title">title</label>
        <input id="title" placeholder="enter title" name="listing[title]" type="text">
        <br><br>

        <label for="description">description</label>
        <textarea id="description" name="listing[description]" placeholder="enter description"></textarea>
        <br><br>

        <label for="image">image</label>
        <input id="image" placeholder="enter image" name="listing[image]" type="text">
        <br><br>

        <label for="price">price</label>
        <input id="price" placeholder="enter title" name="listing[price]" type="number">
        <br><br>

        <label for="location">location</label>
        <input id="location" placeholder="enter title" name="listing[location]" type="text">
        <br><br>

        <label for="country">country</label>
        <input id="country" placeholder="enter title" name="listing[country]" type="text">
        <br><br>

        <button>Add Listing</button>
    </form>
</body>
