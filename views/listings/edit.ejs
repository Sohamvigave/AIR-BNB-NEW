<% layout("./layouts/boilerplate") %>
<div class="form-container">
    <h1>Edit Listing</h1>
    
    <form class="form needs-validation" method="post" action="/listings/<%= listing.id %>?_method=PUT" novalidate>
        <div class="form-group">
            <label for="title" class="form-label">Title</label>
            <input id="title" class="form-control" name="listing[title]" value="<%= listing.title %>" type="text" required>
            <div class="invalid-feedback">Please provide a title.</div>
        </div>

        <div class="form-group">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" class="form-control" name="listing[description]" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Please add a description.</div>
        </div>

        <div class="form-group">
            <label for="image" class="form-label">Image URL</label>
            <input id="image" class="form-control" name="listing[image]" value="<%= listing.image %>" type="text" placeholder="https://example.com/image.jpg" required>
            <div class="invalid-feedback">Please provide an image URL.</div>
        </div>

        <div class="form-group">
            <label for="price" class="form-label">Price ($)</label>
            <input id="price" class="form-control" name="listing[price]" value="<%= listing.price %>" type="number" min="0" step="0.01" required>
            <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div class="form-group">
            <label for="location" class="form-label">Location</label>
            <input id="location" class="form-control" name="listing[location]" value="<%= listing.location %>" type="text" required>
            <div class="invalid-feedback">Please enter the location.</div>
        </div>

        <div class="form-group">
            <label for="country" class="form-label">Country</label>
            <input id="country" class="form-control" name="listing[country]" value="<%= listing.country %>" type="text" required>
            <div class="invalid-feedback">Please enter the country.</div>
        </div>

        <div class="form-actions">
            <button type="submit" class="submit-btn">Update Listing</button>
            <a href="/listings/<%= listing.id %>" class="cancel-btn">Cancel</a>
        </div>
    </form>
</div>