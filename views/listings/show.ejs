<% layout("./layouts/boilerplate") %>

<div class="listing-show-container">
    <h1><%= listing.title %></h1>
    
    <div class="listing-details">
        <!-- Left column: Image -->
        <div class="listing-image-section">
            <% if (listing.image) { %>
                <img src="<%= listing.image %>" alt="<%= listing.title %>" class="listing-main-image">
            <% } else { %>
                <div class="no-image-placeholder">
                    <span>No Image Available</span>
                </div>
            <% } %>
        </div>
        
        <!-- Right column: Details -->
        <div class="listing-info-section">
            <div class="listing-info-item">
                <span class="listing-info-label">Description</span>
                <p class="listing-info-value description-value"><%= listing.description %></p>
            </div>
            
            <div class="listing-info-item">
                <span class="listing-info-label">Price</span>
                <span class="listing-info-value price-value">&#8377; <%= listing.price.toLocaleString("en-IN") %></span>
            </div>
            
            <div class="listing-info-item">
                <span class="listing-info-label">Location</span>
                <span class="listing-info-value"><%= listing.location %></span>
            </div>
            
            <div class="listing-info-item">
                <span class="listing-info-label">Country</span>
                <span class="listing-info-value"><%= listing.country %></span>
            </div>
            
            <div class="listing-info-item">
                <span class="listing-info-label">Listing ID</span>
                <span class="listing-info-value"><%= listing.id %></span>
            </div>
        </div>
    </div>
    
    <div class="simple-review">
        <!-- Add form-control class to inputs -->
        <form class="form needs-validation" method="post" action="/listings/<%=listing.id%>/reviews" novalidate>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            
            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea placeholder="Enter comment" id="comment" rows="3" name="review[comment]" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    Comment is required
                </div>
            </div>
            
            <button type="submit" class="btn btn-secondary">Submit</button>
        </form>
    </div>
    
    <div class="container py-3">
        <h5 class="mb-4 border-bottom pb-2">What People Say</h5>
        
        <% if (listing.reviews && listing.reviews.length > 0) { %>
            <div class="row g-3">
                <!-- Left Column -->
                <div class="col-lg-6">
                    <% for (let i = 0; i < listing.reviews.length; i++) { %>
                        <% if (i % 2 === 0) { %>
                            <% let review = listing.reviews[i]; %>
                            <div class="bg-light p-3 rounded mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="me-2">
                                        <% for(let j = 0; j < 5; j++) { %>
                                            <% if (j < review.rating) { %>
                                                <i class="bi bi-star-fill text-warning" style="font-size: 0.8rem;"></i>
                                            <% } else { %>
                                                <i class="bi bi-star text-muted" style="font-size: 0.8rem;"></i>
                                            <% } %>
                                        <% } %>
                                    </div>
                                    <div class="ms-auto text-muted" style="font-size: 0.8rem;">
                                        <%= new Date(review.createdAt).toLocaleDateString('en-US', { 
                                            month: 'short', 
                                            day: 'numeric' 
                                        }) %>

                                        <!-- Delete button added here -->
                                        <form class="d-inline ms-2" method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this review?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>

                                    </div>
                                </div>
                                <p class="mb-0" style="font-size: 0.95rem;"><%= review.comment %></p>
                            </div>
                        <% } %>
                    <% } %>
                </div>
                
                <!-- Right Column -->
                <div class="col-lg-6">
                    <% for (let i = 0; i < listing.reviews.length; i++) { %>
                        <% if (i % 2 === 1) { %>
                            <% let review = listing.reviews[i]; %>
                            <div class="bg-light p-3 rounded mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="me-2">
                                        <% for(let j = 0; j < 5; j++) { %>
                                            <% if (j < review.rating) { %>
                                                <i class="bi bi-star-fill text-warning" style="font-size: 0.8rem;"></i>
                                            <% } else { %>
                                                <i class="bi bi-star text-muted" style="font-size: 0.8rem;"></i>
                                            <% } %>
                                        <% } %>
                                    </div>
                                    <div class="ms-auto text-muted" style="font-size: 0.8rem;">
                                        <%= new Date(review.createdAt).toLocaleDateString('en-US', { 
                                            month: 'short', 
                                            day: 'numeric' 
                                        }) %>

                                        <!-- Delete button added here -->
                                        <form class="d-inline ms-2" method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this review?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>

                                    </div>
                                </div>
                                <p class="mb-0" style="font-size: 0.95rem;"><%= review.comment %></p>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-3">
                <i class="bi bi-chat-quote text-muted" style="font-size: 2rem;"></i>
                <p class="text-muted mt-2">Be the first to leave a review!</p>
            </div>
        <% } %>
    </div>
    
    <!-- Action Buttons -->
    <div class="listing-actions">
        <a href="/listings/<%= listing.id %>/edit" class="edit-listing-btn">
            Edit Listing
        </a>
        
        <form method="post" action="/listings/<%= listing.id %>?_method=DELETE" style="margin: 0;">
            <button type="submit" class="delete-listing-btn" onclick="return confirm('Are you sure you want to delete this listing?')">
                Delete Listing
            </button>
        </form>
    </div>
    
    <!-- Back Button -->
    <a href="/listings" class="back-btn">Back to All Listings</a>
</div>
